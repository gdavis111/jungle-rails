<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <% if current_user %>
            <h2>Add a review:</h2>
            <%= form_for [@product, @review] do |f| %>
              <dt>Details:</dt>
              <dd><%= f.text_area :description %></dd>
              <dt>Rating:</dt>
              <dd><%= f.select :rating, [5, 4, 3, 2, 1] %></dd>
              <dd class="submit"><%= f.submit "Submit" %></dd>
            <% end %>
          <% end %>
          <%= render 'review' %>
        </dl>
      </div>
    </div>

  </article>

</section>
